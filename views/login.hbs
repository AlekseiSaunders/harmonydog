<main class='container'>
  <div>
    <section class='col-6 mt-5'>
      {{#if locals.messages.errors}}
        {{#each messages.errors}}
          <div class='alert alert-danger'>{{messages.errors.msg}}</div>
        {{/each}}
      {{/if}}
      {{#if locals.messages.info}}
        {{#each messages.info}}
          <div class='alert alert-info'>{{messages.info.msg}}</div>
        {{/each}}
      {{/if}}
      <form action='/login' method='POST'>
        <div class='mb-3'>
          <label for='userEmail' class='form-label'>Email address
          </label>
          <input
            type='email'
            class='form-control'
            id='userEmail'
            aria-describedby='emailHelp'
            name='userEmail'
          />
        </div>
        <div class='mb-3'>
          <label for='password' class='form-label'>password</label>
          <input
            type='password'
            class='form-control'
            id='password'
            name='password'
          />
        </div>
        <button type='submit' class='btn btn-primary'>Submit</button>
      </form>
    </section>
  </div>
</main>